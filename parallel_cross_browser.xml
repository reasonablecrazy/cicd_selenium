<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests" thread-count="4">
<listeners>
<listener class-name="naveennarayananacademy.testComponents.Listeners"></listener>
<!--<listener class-name="naveennarayananacademy.testComponents.RetryTransformer"></listener>
--></listeners>
  <test thread-count="5" name="E2E">
    <parameter name="browser" value="chrome"></parameter>
    <classes>
      <class name="naveennarayananacademy.tests.StandAloneTest">
      <methods>
      	<include name="validateProductOnConfirmationPage_with_JSON"></include>
      </methods></class>
    </classes>
  </test> <!-- Test -->
  
  <test thread-count="5" name="Error Validation">
  <parameter name="browser" value="firefox"></parameter>
    <classes>
      <class name="naveennarayananacademy.tests.StandAloneTest">
      <methods>
      	<include name="incorrectLogin"></include>
      </methods></class>
    </classes>
  </test> <!-- Test -->
  
  <test thread-count="5" name="Confirmation Page">
  <parameter name="browser" value="safari"></parameter>
    <classes>
      <class name="naveennarayananacademy.tests.StandAloneTest">
      <methods>
      	<include name="validateProductOnConfirmationPage"></include>
      </methods></class>
    </classes>
  </test> <!-- Test -->
  
  <test thread-count="5" name="E2E_Edge">
    <parameter name="browser" value="edge"></parameter>
    <classes>
      <class name="naveennarayananacademy.tests.StandAloneTest">
      <methods>
      	<include name="validateProductOnConfirmationPage_with_JSON"></include>
      </methods></class>
    </classes>
  </test> <!-- Test -->
  
</suite> <!-- Suite -->
